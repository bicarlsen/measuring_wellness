<div class="<%= bucket_type %>-bucket bucket">
	<div class="bucket-image-container image-container container">
		<% 
			image ||= title.downcase.gsub(/\s/, '_') + ".png"
		%>
		<%= image_tag "bucket_images/" + image, class: "bucket-image" %>
	</div>
	<div class="bucket-content-container content-container container">
		<div class="bucket-title title">
			<%= title %>
		</div>
		<div class="bucket-content content">
			<%= content %>
		</div>		
		<div class="bucket-link-container link-container container">
			<% if defined? link_base
						link = "#{link_base}##{title.delete(' ')}" %>
				<%= link_to "Learn More", link, class: "bucket-link" %>
			<% end %>
		</div>
	</div>
</div>


