<h1>Analyte Group</h1>
<%= link_to 'All Groups', analyte_groups_path %>

<h2><%= @group.name %></h2>
<h3>Default Weights</h3>
<table>
	<thead>
		<th>Severity</th>
		<th>Weight</th>
	</thead>
	<tbody>
		<% @group.default_weights.each do |weight| %>
			<tr>
				<td><%= weight.severity %></td>
				<td><%= weight.weight %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<h3>Rules</h3>
<%= render partial: 'rules_table', object: @rules, as: :rules %>
<%= link_to 'Add Rule', new_rule_path( group: @group ) %>

<%= link_to 'Edit', edit_analyte_group_path( @group ) %>
<%= link_to 'Delete', @group, method: :delete,
	confirm: "Are you sure you want to delete this Analyte Group?" %>
